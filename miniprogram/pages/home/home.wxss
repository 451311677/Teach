/**home.wxss**/

/**城市控件背景**/

.home-city {
  background-color: #5777d1;
  border-width: 1rpx;
  border-left: 0rpx;
  border-right: 0;
  border-bottom: 0;
  border-color: rgb(124, 148, 228);
  border-style: solid;
  display: flex;
  flex-direction: row;
}
.serve{
  margin-right: 20rpx;
  color: rgb(228, 228, 228);
  font-size:14px;
  margin-top:-12rpx;
}

.view-tip {
  margin-top: 90rpx;
  display: flex;
  justify-content: center;
  color: rgb(11, 255, 32);
  font-weight: bold;
  font-size: 25px;
  font-family: "楷体";
}

/*城市控件样式*/

.home-city-left {
  margin-left: 20rpx;
  color: rgb(228, 228, 228);
}

/*首页背景*/

.background {
  width: 100%;
  height: 100%;
  background-size: cover;
  /*overflow:hidden;*/
  position: fixed;
}

.item {
  width: 94%;
  height: 160rpx;
  margin-left: 3%;
  margin-top: 30rpx;
  background-color: rgb(245, 243, 243);
  display: flex;
  flex-direction: row;
}

/*教员库按钮样式*/

.item-teacher {
  background-color: rgb(253, 78, 78);
  color: aliceblue;
  border-radius: 8%;
}

/*学员库按钮样式*/

.item-student {
  background-color: rgb(96, 253, 75);
  color: aliceblue;
  border-radius: 8%;
}

/*按钮边距尺寸*/

.item-button {
  width: 100%;
  height: 100rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
}

/*发布订单按钮样式*/

.item-publish {
  background-color: rgb(57, 93, 255);
  color: aliceblue;
  border-radius: 5%;
  width: 610rpx;
}

.item-pub {
  height: 100rpx;
  margin-top: 80rpx;
  display: flex;
  align-items: center;
}

.history-table-wrap {
  position: absolute;
  width: 92%;
  height: 240rpx;
  margin-left: 4%;
  margin-top: 30rpx;
  overflow-y: hidden;
  overflow-x: hidden;
}

/* 表格代码   */

