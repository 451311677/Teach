.dialog{
  width: 428rpx;
  height: 118rpx;
  margin: 50rpx;
  background-color:rgb(71, 88, 161);
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
 
}
.item{
  display:flex;
  flex-direction: column;
  width: 94%;
  border-width: 5rpx;
  border-color: rgb(105, 146, 192);
  border-style: solid;
  margin-top:70rpx;
  margin-left: 3%;
  font-size:13px;
  font-family: "宋体"
 
}
.item-row{
  display:flex;
  flex-direction: row;
}
.font-style{
  font-weight:bold;
  color:rgb(116, 115, 115);
}

.history-table-wrap{
  position: absolute;
  width: 92%;
  height: 240rpx;
  left: 50%;
  margin-left: -334rpx;
  margin-top: 30rpx;
  overflow-y: hidden;
  overflow-x: hidden;
}
